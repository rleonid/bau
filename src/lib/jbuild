(jbuild_version 1)

(library (
  (name bau)
  (public_name bau)
  (synopsis "Big array utilities.")
  (libraries (bigarray))
  (flags -dsource)
  (preprocess (pps (bigarray_fold_ppx)))
  ))

(rule
 ((targets (bigarrayExt.ml))
  (deps    (bigarrayExt.cppo.ml))
  (action  (run ${bin:cppo} -V OCAML:${ocaml_version} ${<} -o ${@}))))
